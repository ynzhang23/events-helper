<h1><%= "#{@user.display_name}'s Profile" %></h1>
<div>
  <h2><%= "About" %></h2>
  <div><%= "Name: #{@user.display_name}" %></div>
  <div><%= "Username: #{@user.username}" %></div>
  <div><%= "Email: #{@user.email}" %></div>
</div>
<div>
  <h2><%= "Hosting:" %></h2>
  <% events = @user.hosted_events %>
  <% if events.none? %>
      <%= "#{@user.display_name} has no hosting plans!" %>
  <% else %>
    <% events.each do |event| %>
      <h3>
        <div><%= link_to "#{event.event_name}", event_path(event.id) %></div>
      </h3>
      <div><%= event.description %></div>
      <em>
        <div><%= event.location %></div>
        <div><%= event.date %></div>
      </em>
    <% end %>
  <% end %>
</div>
