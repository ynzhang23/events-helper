<%= stylesheet_link_tag 'user' %>
<div class="profile-container">
  <div class="user-info-section">
    <h1 class="profile-title"><%= "#{@user.display_name}'s Profile" %></h1>
    <% if @user == current_user %>
      <%= link_to "Edit Profile", edit_user_registration_path, class: "edit-profile-link" %>
    <% end %>
    <div class="user-section">
      <h2 class="user-section-title">About</h2>
      <div><strong>Name:</strong> <%= @user.display_name %></div>
      <div><strong>Username:</strong> <%= @user.username %></div>
      <div><strong>Email:</strong> <%= @user.email %></div>
    </div>
  </div>
  <div class="events-info">
    <div class="profile-section">
      <h2 class="profile-section-title">Hosting:</h2>
      <% if @hosted_events.none? %>
        <p><%= "#{@user.display_name} has no hosting plans!" %></p>
      <% else %>
        <div class="event-list">
          <%= render partial: "events/event", collection: @hosted_events, locals: { show_join: true } %>
        </div>
      <% end %>
    </div>
    <div class="profile-section">
      <h2 class="profile-section-title">Attending:</h2>
      <% if @attend_events.none? %>
        <p><%= "#{@user.display_name} is not attending any events!" %></p>
      <% else %>
        <div class="event-list">
          <%= render partial: "events/event", collection: @attend_events, locals: { show_join: true } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
